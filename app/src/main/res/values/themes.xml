<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Base application theme for day mode -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_highlight</item>

        <item name="colorTextDeep">@color/text_deep</item>
        <item name="colorTextLight">@color/text_light</item>

        <item name="colorListItemBackgroundNormal">@color/list_item_background_normal</item>
        <item name="colorListItemTextNormal">@color/text_deep</item>
        <item name="colorListItemTextRead">@color/list_item_text_read</item>
        <item name="colorListSectionTitle">@color/list_item_section_header_text</item>
        <item name="colorFragmentBackground">@color/fragment_background</item>

        <item name="colorLeftDrawerBackgroundNormal">@color/left_drawer_background_normal</item>
        <item name="colorLeftDrawerBackgroundSelected">@color/left_drawer_background_selected</item>

        <item name="drawableListItemSelector">@drawable/list_item_selector</item>
        <item name="drawableActionNew">@drawable/ic_action_new</item>
        <item name="drawableActionNextItem">@drawable/ic_action_next_item</item>
        <item name="drawableLeftDrawerBackground">@drawable/left_drawer_background</item>
    </style>

    <!-- Base application theme for night mode -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">

        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorPrimary">@color/night_color_primary</item>
        <item name="colorPrimaryDark">@color/night_color_primary_dark</item>
        <item name="colorAccent">@color/night_color_accent</item>
        <item name="colorControlHighlight">@color/night_color_highlight</item>

        <item name="colorTextDeep">@color/night_text_deep</item>
        <item name="colorTextLight">@color/night_text_light</item>

        <item name="colorListItemBackgroundNormal">@color/night_list_item_background_normal</item>
        <item name="colorListItemTextNormal">@color/night_text_deep</item>
        <item name="colorListItemTextRead">@color/night_list_item_text_read</item>
        <item name="colorListSectionTitle">@color/night_list_item_section_header_text</item>
        <item name="colorFragmentBackground">@color/night_fragment_background</item>

        <item name="colorLeftDrawerBackgroundNormal">@color/night_left_drawer_background_normal</item>
        <item name="colorLeftDrawerBackgroundSelected">@color/night_left_drawer_background_selected</item>

        <item name="drawableListItemSelector">@drawable/list_item_selector_dark</item>
        <item name="drawableActionNew">@drawable/ic_action_new_dark</item>
        <item name="drawableActionNextItem">@drawable/ic_action_next_item_dark</item>
        <item name="drawableLeftDrawerBackground">@drawable/left_drawer_background_dark</item>

    </style>

</resources>
