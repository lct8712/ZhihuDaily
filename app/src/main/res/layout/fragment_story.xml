<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity$PlaceholderFragment">

    <com.chentian.zhihudaily.zhihudaily.ui.view.StoryListView
            android:id="@+id/list_view_story"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.chentian.zhihudaily.zhihudaily.ui.view.ThemeStoryListView
            android:id="@+id/list_view_theme_story"
            android:visibility="gone"
            android:divider="@color/list_background"
            android:dividerHeight="@dimen/story_list_item_margin"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>
